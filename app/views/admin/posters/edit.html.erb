<div id="notice">
  <h1>编辑海报</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= form_for [:admin, @poster], :html => { :multipart => true } do |f| %>
      <%= render "admin/shared/error_messages", :target => @poster %>
      <fieldset class="form-generic">
        <legend>海报信息</legend>
        <ul>
          <li>
            <label>标题：</label><%= f.text_field :title, :class => 'text-field' %>
          </li>
          <li>
            <label>图片：</label><%= f.file_field :image, :class => 'file-field' %>
          </li>
          <li>
            <label>URL：</label><%= f.text_field :url, :class => 'text-field' %>
          </li>
          <li>
            <label>前台可见：</label><%= f.check_box :visible %>
          </li>
        </ul>
      </fieldset>
      <div class="action-generic">
        <%= link_to '修改', '#', :onclick => "submitForm('edit_poster_#{@poster.id}')", :class => 'button' %>
      </div>
      <% end %>
    </div>
  </div>
</div>