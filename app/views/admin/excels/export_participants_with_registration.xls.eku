__filename = "approved_participants_with_registration_#{Time.now.strftime '%Y%m%d%H%M'}.xls"

title_format = Spreadsheet::Format.new(:color => :blue, :weight => :bold)

sheet = xls.create_worksheet :name => '参会者'
sheet.row(0).concat %w{序号 账号 参会类型 中文名 外文名 性别 国籍 联系地址 邮政编码 座机 手机 传真 电子邮件 工作单位 职称 职位 任教国 任教单位 世汉学会会员 会费截止日期 备注 提交时间 最后更新时间 酒店住宿 签到时间 缴纳会议费 缴纳会员费 参观博物馆 参观兵马俑 参加晚宴 参加会员代表大会}
sheet.row(0).default_format = title_format
@participants.each_with_index do |p, i|
  sheet.update_row i + 1, p.id, p.account, human_participant_type_tag(p.attend_as), p.chinese_name, p.foreign_name, human_gender_tag(p.gender), p.nationality.name, p.address, p.postal_code, p.phone, p.mobile, p.fax, p.email, p.company, p.title, p.position, human_teaches_in_tag(p), p.teaches_at, plain_boolean_tag(p.isclt_member?), human_date_tag(p.isclt_expired_at), p.remark, human_datetime_tag(p.created_at), human_datetime_tag(p.updated_at), human_hotel_room_tag(p.bookings.first), human_register_tag(p.registered_at), p.fee_paid, p.isclt_fee_paid, plain_boolean_tag(p.tour_museum), plain_boolean_tag(p.tour_tw), plain_boolean_tag(p.attend_banquet), plain_boolean_tag(p.attend_congress)
end