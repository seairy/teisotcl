<div id="notice">
  <h1>未签到代表</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= flash_tag %>
      <table class="list-generic">
        <thead>
          <tr>
            <td>中文名</td>
            <td>参会类型</td>
            <td>工作单位</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @participants.each do |participant| %>
            <tr>
              <td><%= link_to participant.chinese_name, [:admin, participant] %></td>
              <td><%= human_participant_type_tag participant.attend_as %></td>
              <td><%= participant.company.truncate(28) %></td>
              <td><%= edit_tag participant %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @participants %>
    </div>
  </div>
</div>