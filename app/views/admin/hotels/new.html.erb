<div id="notice">
  <h1>添加酒店</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= form_for [:admin, @hotel], :html => { :multipart => true } do |f| %>
      <%= render "admin/shared/error_messages", :target => @hotel %>
      <fieldset class="form-generic">
        <legend>酒店信息</legend>
        <ul>
          <li>
            <label>名称：</label><%= f.text_field :name, :class => 'text-field' %>
          </li>
          <li>
            <label>地址：</label><%= f.text_field :address, :class => 'text-field' %>
          </li>
          <li>
            <label>电话：</label><%= f.text_field :phone, :class => 'text-field' %>
          </li>
          <li>
            <label>网址：</label><%= f.text_field :website, :class => 'text-field' %>
          </li>
          <li>
            <label>图片：</label><%= f.file_field :image, :class => 'file-field' %>
          </li>
          <li>
            <label>简介：</label><%= f.text_area :description, :class => 'text-area' %>
          </li>
        </ul>
      </fieldset>
      <div class="action-generic">
        <%= link_to '添加', '#', :onclick => "submitForm('new_hotel')", :class => 'button' %>
      </div>
      <% end %>
    </div>
  </div>
</div>