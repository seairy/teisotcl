<div id="notice">
  <h1>编辑文章</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= form_for [:admin, @article] do |f| %>
      <%= render "admin/shared/error_messages", :target => @article %>
      <fieldset class="form-generic">
        <legend>文章信息</legend>
        <ul>
          <li>
            <label>标题：</label><%= f.text_field :title, :class => 'text-field' %>
          </li>
          <li>
            <label>来源：</label><%= f.text_field :source, :class => 'text-field' %>
          </li>
          <li><%= f.text_area :content %><script language="javascript">CKEDITOR.replace('article_content');</script></li>          <li>
            <label>前台可见：</label><%= f.check_box :visible %>
          </li>
          <li>
            <label>精华：</label><%= f.check_box :featured %>
          </li>
          <li>
            <label>显示时间：</label><%= f.datetime_select :displayed_at, :use_month_numbers => true %>
          </li>
        </ul>
      </fieldset>
      <div class="action-generic">
        <%= link_to '修改', '#', :onclick => "submitForm('edit_article_#{@article.id}')", :class => 'button' %>
      </div>
      <% end %>
    </div>
  </div>
</div>