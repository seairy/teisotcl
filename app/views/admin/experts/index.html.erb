<div id="notice">
  <h1>专家列表</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= flash_tag %>
      <table class="list-generic">
        <thead>
          <tr>
            <td>名称</td>
            <td>评审信息</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @experts.each do |expert| %>
            <tr>
              <td><%= link_to expert.name, [:admin, expert] %></td>
              <td>已评审<%= expert.ratings.rated.count %>篇，未评审<%= expert.ratings.unrate.count %>篇</td>
              <td><%= edit_tag expert %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @experts %>
    </div>
  </div>
</div>