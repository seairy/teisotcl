<div id="notice">
  <h1>已提交论文列表</h1>
</div>
<div id="side">
  <div class="portlet">
    <div class="title">相关功能</div>
    <div class="content">
      <ul>
        <li><%= link_to '批量下载RAR',archive_admin_theses_path %></li>
      </ul>
    </div>
  </div>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= flash_tag %>
      <table class="list-generic">
        <thead>
          <tr>
            <td>论文题目</td>
            <td>全文评审信息</td>
            <td>操作</td>
          </tr>
        </thead>
        <tbody>
          <% @theses.each do |thesis| %>
            <tr>
              <td>
                <%= link_to thesis.subject.truncate(25), [:admin, thesis.participant], :id => "thesis-#{thesis.id}" %>
                <%= javascript_tag do %>
                  $("a#thesis-<%= thesis.id %>").qtip({
                    content: "<%= thesis.subject %>",
                    style: {
                      name: 'light',
                      tip: 'topLeft'
                    }
                  });
                <% end %>
              </td>
              <td><%= human_rating_for_list_tag thesis.ratings.for_review(Review.find(2)) %></td>
              <td><%= edit_tag thesis.participant %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @theses %>
    </div>
  </div>
</div>