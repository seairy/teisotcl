<div id="notice">
  <h1>编辑房型</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= form_for [:admin, @hotel, @room] do |f| %>
      <%= render "admin/shared/error_messages", :target => @room %>
      <fieldset class="form-generic">
        <legend>房型信息</legend>
        <ul>
          <li>
            <label>名称：</label><%= f.text_field :name, :class => 'text-field' %>
          </li>
          <li>
            <label>配额：</label><%= f.text_field :quota, :class => 'text-field' %>
          </li>
          <li>
            <label>原价：</label><%= f.text_field :price, :class => 'text-field' %>
          </li>
          <li>
            <label>参会价：</label><%= f.text_field :discount_price, :class => 'text-field' %>
          </li>
          <li>
            <label>床位数：</label><%= f.text_field :bed_amount, :class => 'text-field' %>
          </li>
        </ul>
      </fieldset>
      <div class="action-generic">
        <%= link_to '修改', '#', :onclick => "submitForm('edit_room_#{@room.id}')", :class => 'button' %>
      </div>
      <% end %>
    </div>
  </div>
</div>