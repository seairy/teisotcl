<div id="notice">
  <h1>添加用户</h1>
</div>
<div id="side">
  <%= render "admin/shared/shortcut" %>
</div>
<div id="main">
  <div class="portlet">
    <div class="title"></div>
    <div class="content">
      <%= form_for [:admin, @user] do |f| %>
      <%= render "admin/shared/error_messages", :target => @user %>
      <fieldset class="form-generic">
        <legend>用户信息</legend>
        <ul>
          <li>
            <label>账号：</label><%= f.text_field :account, :class => 'text-field' %>
          </li>
          <li>
            <label>密码：</label><%= f.password_field :password, :class => 'text-field' %>
          </li>
          <li>
            <label>密码确认：</label><%= f.password_field :password_confirmation, :class => 'text-field' %>
          </li>
          <li>
            <label>角色：</label><%= f.select :role, user_role_options %>
          </li>
          <li>
            <label>名称：</label><%= f.text_field :name, :class => 'text-field' %>
          </li>
          <li>
            <label>账号可用：</label><%= f.check_box :available %>
          </li>
        </ul>
      </fieldset>
      <div class="action-generic">
        <%= link_to '添加', '#', :onclick => "submitForm('new_user')", :class => 'button' %>
      </div>
      <% end %>
    </div>
  </div>
</div>